add_newline = true

format = """
$username@$hostname \
$shlvl\
$kubernetes\
$directory\
$git_branch\
$git_commit\
$git_state\
$git_status\
$hg_branch\
$docker_context\
$package\
$cmake\
$dart\
$dotnet\
$elixir\
$elm\
$erlang\
$golang\
$helm\
$java\
$julia\
$kotlin\
$nim\
$nodejs\
$ocaml\
$perl\
$php\
$purescript\
$python\
$ruby\
$rust\
$scala\
$swift\
$terraform\
$vagrant\
$zig\
$nix_shell\
$conda\
$memory_usage\
$aws\
$gcloud\
$openstack\
$env_var\
$crystal\
$custom\
$cmd_duration\
$line_break\
$lua\
$jobs\
$battery\
$time\
$status\
$shell
$character"""

[character]
success_symbol = "[✓ \\$](bold green)"
error_symbol = "[✗ \\$](bold red)"

[hostname]
ssh_only = false
format = "[$hostname]($style)"

[package]
disabled = true

[directory]
truncation_symbol = ".../"

[time]
format = "[$time]($style) "
disabled = false

[git_branch]
format = "[$symbol$branch]($style) "

[username]
show_always = true
format = "[$user]($style)"

[python]
symbol = "[py]($style)-"
style = "bold cyan"
format = '[${symbol}${pyenv_prefix}(${version})( \(${virtualenv}\))](${style}) '

[line_break]
disabled = true

